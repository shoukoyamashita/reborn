<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <!--img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""-->
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <%= link_to 'プロフィール・投稿一覧', user_path(user) ,class: 'btn btn-outline-success btn-sm' %>
          <% if user == current_user %>
            <%= link_to "退会する", user_path(user), method: :delete, data: { confirm: "本当に退会しますか?" }, class: 'btn btn-outline-danger btn-sm' %>
          <% end %>
        </div>
        </div>
      </li>
      <br>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>