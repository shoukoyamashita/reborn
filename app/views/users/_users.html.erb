<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <!--img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""-->
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <%= link_to 'この人の投稿一覧を見る', user_path(user) ,class: 'btn btn-success btn-sm' %>
          
          <!-- % if current_user == user.id % -->
            <%= link_to "退会する", user_path(user), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <!-- % end % -->
        </div>
        </div>
      </li>
      <br>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>