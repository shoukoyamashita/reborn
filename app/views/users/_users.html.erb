<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <!--li class="media" -->
        <!--img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""-->
        <!--div class="media-body"--><!--div-->
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
          </svg>
          　<span class="font-weight-bold"><%= user.name %></span>
          <br>
          
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-right-text" viewBox="0 0 16 16">
            <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z"/>
            <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
          </svg>
          　<%= user.prof %>
        </div>
        <div>
          　　<%= link_to '投稿一覧', user_path(user) ,class: 'btn btn-outline-success btn-sm' %>
          
          <% if user == current_user %>
            <%= link_to "退会する", user_path(user), method: :delete, data: { confirm: "本当に退会しますか?" }, class: 'btn btn-outline-danger btn-sm' %>
          <% end %>
        </div>
      <br>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>